# Containerfile for spanza testing
FROM debian:bookworm-slim

# Install WireGuard and networking tools
RUN apt-get update && apt-get install -y \
    wireguard-tools \
    iproute2 \
    iptables \
    iputils-ping \
    curl \
    wget \
    vim \
    nano \
    netcat-openbsd \
    tcpdump \
    net-tools \
    dnsutils \
    traceroute \
    socat \
    nmap \
    iperf3 \
    ufw \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy pre-built spanza binary
COPY spanza ./spanza

# Copy scripts and pre-generated DERP keys
COPY container/entrypoint.sh /entrypoint.sh
COPY container/start-gateway.sh /workspace/start-gateway.sh
COPY container/firewall-test.sh /workspace/firewall-test.sh
COPY container/peer1-derp.key /workspace/peer1-derp.key
COPY container/peer2-derp.key /workspace/peer2-derp.key
RUN chmod +x /entrypoint.sh /workspace/start-gateway.sh /workspace/firewall-test.sh

ENTRYPOINT ["/entrypoint.sh"]
CMD ["/bin/bash"]
